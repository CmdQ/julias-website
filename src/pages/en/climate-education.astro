---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const lang = 'en';
const alternates = {
	de: '/de/climate-education/',
};

const allPages = await getCollection('pages');
const entry = allPages.find(p => p.id === 'en/climate-education.md');
if (!entry) throw new Error('Page content not found');
const { Content } = await entry.render();
---
<BaseLayout lang={lang} title="Climate Education" description={entry.data.description} alternates={alternates}>
	<article class="prose">
		<Content />
	</article>
</BaseLayout>
