---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const lang = 'en';
const alternates = {
	de: '/de/',
};

const allPages = await getCollection('pages');
const entry = allPages.find(p => p.id === 'en/index.md');
if (!entry) throw new Error('Page content not found');
const { Content } = await entry.render();
---
<BaseLayout lang={lang} title="Home" description={entry.data.description} alternates={alternates}>
	<article class="prose">
		<Content />
	</article>
	<div class="mt-8 flex flex-wrap gap-4">
		<a class="btn-primary" href="/en/project-futopia/">
			<span class="btn-icon" aria-hidden="true">→</span>
			<span class="btn-text">Project Futopia</span>
		</a>
		<a class="btn-secondary" href="/en/creative-projects/">
			<span class="btn-icon" aria-hidden="true">✦</span>
			<span class="btn-text">Creative Projects</span>
		</a>
	</div>
</BaseLayout>
